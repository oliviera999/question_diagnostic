{
    "name": "oliviera999/moodle-question-diagnostic",
    "description": "Plugin Moodle pour le diagnostic et la gestion de la banque de questions",
    "type": "moodle-local",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Olivier",
            "email": "contact@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.12",
        "phpstan/phpstan": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "local_question_diagnostic\\": "classes/"
        },
        "files": [
            "lib.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "local_question_diagnostic\\tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/coverage/html",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml",
        "phpmd": "phpmd . text phpmd.xml",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@test"
        ],
        "post-install-cmd": [
            "echo 'Installation terminée. Configurez votre environnement Moodle.'"
        ],
        "post-update-cmd": [
            "echo 'Mise à jour terminée. Purgez le cache Moodle si nécessaire.'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "moodle-plugin": {
            "component": "local_question_diagnostic",
            "release": "v1.11.27",
            "maturity": "MATURITY_STABLE",
            "requires": "2022041900",
            "supported": [
                "400",
                "401",
                "403",
                "404",
                "405"
            ]
        }
    }
}
